{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": false,
        "esModuleInterop": true,
        "target": "ES6",
        "module": "CommonJS",
        "lib": [
            "dom",
            "DOM.Iterable",
            "esnext",
            "ScriptHost",
            "WebWorker.ImportScripts"
        ],
        "jsx": "react-jsx",
        "allowUmdGlobalAccess": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}